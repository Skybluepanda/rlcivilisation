{
  "compilerOptions": {
    "noEmit": true,
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@App/*" : ["components/App/*"],
    }
  },
  "include": ["src", "src/hooks"]
}